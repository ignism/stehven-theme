                    <h3 class="w-12 m-0 p-0 font-druk absolute pin-l ml-6 md:ml-8 my-auto">2</h3>
                    <p class="ml-12 md:mx-24 text-base md:text-2xl">
                        {{ page.meta(prefix ~ 'step_2') }}
                    </p>
                </div>
                <div class="relative w-full flex-grow bg-blue text-white px-6 md:px-8 flex items-center">
                    <h3 class="w-12 m-0 p-0 font-druk absolute pin-l ml-6 md:ml-8 my-auto">3</h3>
                    <p class="ml-12 md:mx-24 text-base md:text-2xl">
