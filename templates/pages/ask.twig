{% extends 'base.twig' %}
{# #}
{% block header %}
<header class="section flex flex-col">
    <div class="w-full pt-24 flex-1 bg-red">
        <div class="h-full relative">
            <div class="m-12 h-auto pin absolute">
                <img class="h-full max-w-full" src="{{ theme.link }}/assets/images/just-ask-us-for.svg" alt="">
            </div>
        </div>
    </div>
    <div class="w-full h-1/2 flex-0 flex bg-purple">
        <div class="w-1/2 flex flex-wrap flex-col">
            <div class="ask-option active bg-white text-red w-full h-1/3 relative">
                <div class="mx-12 pin absolute flex flex-col justify-center">
                    <h3>Knowledge</h3>
                </div>
            </div>
            <div class="ask-option bg-red text-white w-full h-1/3 relative">
                <div class="mx-12 pin absolute flex flex-col justify-center">
                    <h3>Money</h3>
                </div>
            </div>
            <div class="ask-option bg-white text-purple w-full h-1/3 relative">
                <div class="mx-12 pin absolute flex flex-col justify-center">
                    <h3>Network</h3>
                </div>
            </div>
        </div>
        <div class="w-1/2">
            {% set slide1 %}
            <div class="w-full h-full relative">
                <div class="pin absolute mx-24 my-12 flex flex-col">
                    <div class="flex-1">
                        <p class="text-3xl font-medium mb-4">
                            [TITLE 1]
                        </p>
                        <p class="text-2xl">
                            [PARAGRAPH]
                        </p>
                    </div>
                    <div class="flex-0">
                        <p class="text-2xl font-medium">
                            For more information <a class="text-red" href="mailto:ask@stehven.nl">ask@stehven.nl</a>
                        </p>
                    </div>
                </div>
            </div>
            {% endset %}
            {% set slide2 %}
            <div class="w-full h-full relative">
                <div class="pin absolute mx-24 my-12 flex flex-col">
                    <div class="flex-1">
                        <p class="text-3xl font-medium mb-4">
                            [TITLE 2]
                        </p>
                        <p class="text-2xl">
                            [PARAGRAPH]
                        </p>
                    </div>
                    <div class="flex-0">
                        <p class="text-2xl font-medium">
                            For more information <a class="text-red" href="mailto:ask@stehven.nl">ask@stehven.nl</a>
                        </p>
                    </div>
                </div>
            </div>
            {% endset %}
            {% set slide3 %}
            <div class="w-full h-full relative">
                <div class="pin absolute mx-24 my-12 flex flex-col">
                    <div class="flex-1">
                        <p class="text-3xl font-medium mb-4">
                            [TITLE 3]
                        </p>
                        <p class="text-2xl">
                            [PARAGRAPH]
                        </p>
                    </div>
                    <div class="flex-0">
                        <p class="text-2xl font-medium">
                            For more information <a class="text-red" href="mailto:ask@stehven.nl">ask@stehven.nl</a>
                        </p>
                    </div>
                </div>
            </div>
            {% endset %}
            {% include "components/siema-slider.twig" with {
            options: {
            perPage: 1,
            loop: 1,
            controls: 0,
            static: 1,
            draggable: 0,
            navigationClass: 'ask-option'
            },
            slides: [ slide1, slide2, slide3 ]
            } %}
        </div>
    </div>
</header>
{% endblock %}
{# #}
