                                {{ page.meta(prefix ~ 'step_4') }}
                            </p>
                        </div>
                    </div>
                    {% endset %}
                    {% include "components/siema-slider.twig" with {
        options: {
        perPage: 1,
        loop: 0,
        draggable: 0,
        controls: 0,
        navigationClass: 'step-option'
        },
        slides: [ slide1, slide2, slide3, slide4 ]
        } %}
                </div>
            </div>
            <div class="w-1/2 p-32 bg-blue">
                <div class="w-full h-full">
                    <a target="_blank" href="{{ page.meta(prefix ~ 'application_url') }}">
                        <img id="submit-button" class="h-full max-w-full" src="{{ theme.link }}/assets/images/submit-button.svg" alt=""></a>
                </div>
            </div>

        </div>

        <div class="w-full h-full flex flex-col lg:hidden">
            <div class="w-full h-1/3 bg-red py-8">
                <h2 class="m-0 px-6 md:px-8">
                    <span class="text-blue">steps</span>
                    <br>
