{% extends 'base.twig' %}
{% set prefix = 'ask_' ~ locale | getLang ~ '_' %}
{% block header %}
    <header class="section flex flex-col">
        <div class="w-full pt-16 lg:pt-24 h-1/3 lg:h-1/2 bg-red hidden md:block">
            <div class="h-full relative">
                <div class="mx-6 md:mx-8 lg:mx-12 my-6 md:my-12 h-auto pin absolute">
                    <img class="h-full max-w-full" src="{{ theme.link }}/assets/images/just-ask-us-for.svg" alt="">
                </div>
            </div>
        </div>

        <div class="w-full h-1/2 flex-0 hidden lg:flex bg-purple">
            <div class="w-1/2 flex flex-wrap flex-col">
                <div class="ask-option active bg-white text-red w-full h-1/3 relative">
                    <div class="mx-12 pin absolute flex flex-col justify-center">
                        <h3>Knowledge</h3>
                    </div>
                </div>
                <div class="ask-option bg-red text-white w-full h-1/3 relative">
                    <div class="mx-12 pin absolute flex flex-col justify-center">
                        <h3>Money</h3>
                    </div>
                </div>
                <div class="ask-option bg-white text-purple w-full h-1/3 relative">
                    <div class="mx-12 pin absolute flex flex-col justify-center">
                        <h3>Network</h3>
                    </div>
                </div>
            </div>
            <div class="w-1/2">
                {% set slideKnowledge %}
                <div class="w-full h-full relative">
                    <div class="pin absolute mx-24 my-12 flex flex-col">
                        <div class="flex-1">
                            <p class="text-3xl font-medium mb-4">
                                {{ page.meta(prefix ~ 'knowledge_title') }}
                            </p>
                            <p class="text-2xl">
                                {{ page.meta(prefix ~ 'knowledge_description') }}
                            </p>
                        </div>
                        <div class="flex-0">
                            <p class="text-2xl font-medium">
                                For more information
                                <a class="text-red" href="{{ page.meta(prefix ~ 'footer_mail') }}">
                                    {{ page.meta(prefix ~ 'footer_mail') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endset %}
                {% set slideMoney %}
                <div class="w-full h-full relative">
                    <div class="pin absolute mx-24 my-12 flex flex-col">
                        <div class="flex-1">
                            <p class="text-3xl font-medium mb-4">
                                {{ page.meta(prefix ~ 'money_title') }}
                            </p>
                            <p class="text-2xl">
                                {{ page.meta(prefix ~ 'money_description') }}
                            </p>
                        </div>
                        <div class="flex-0">
                            <p class="text-2xl font-medium">
                                For more information
                                <a class="text-red" href="{{ page.meta(prefix ~ 'footer_mail') }}">
                                    {{ page.meta(prefix ~ 'footer_mail') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endset %}
                {% set slideNetwork %}
                <div class="w-full h-full relative">
                    <div class="pin absolute mx-24 my-12 flex flex-col">
                        <div class="flex-1">
                            <p class="text-3xl font-medium mb-4">
                                {{ page.meta(prefix ~ 'network_title') }}
                            </p>
                            <p class="text-2xl">
                                {{ page.meta(prefix ~ 'network_description') }}
                            </p>
                        </div>
                        <div class="flex-0">
                            <p class="text-2xl font-medium">
                                For more information
                                <a class="text-red" href="{{ page.meta(prefix ~ 'footer_mail') }}">
                                    {{ page.meta(prefix ~ 'footer_mail') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endset %}
                {% include "components/siema-slider.twig" with {
      options: {
      perPage: 1,
      loop: 1,
      controls: 0,
      static: 1,
      draggable: 0,
      navigationClass: 'ask-option'
      },
      slides: [ slideKnowledge, slideMoney, slideNetwork ]
      } %}
            </div>
        </div>

        <div id="mobile-just-ask" class="w-full pt-16 lg:pt-24 h-1/3 lg:h-1/2 bg-red block md:hidden">
            <div class="h-full relative">
                <div class="mx-6 md:mx-8 lg:mx-12 my-6 md:my-12 h-auto pin absolute">
                    <img class="h-full max-w-full" src="{{ theme.link }}/assets/images/just-ask-us-for.svg" alt="">
                </div>
            </div>
        </div>

        <div class="w-full h-1/2 flex-1 flex-col lg:hidden bg-purple">
            <div class="expander-wrapper w-full">
                <div class="expander-trigger bg-white text-purple relative h-16 px-6 md:h-32 md:px-8 flex items-center">
                    <h3>knowledge</h3>
                    <div class="expander-icon z-40 absolute w-16 h-16 pin-r pin-t">
                        <div class="plus absolute"><img src="{{ theme.link }}/assets/images/icon-plus.svg" alt=""></div>
                        <div class="cross absolute"><img src="{{ theme.link }}/assets/images/icon-cross.svg" alt=""></div>
                    </div>
                </div>
                <div class="expander-content bg-purple text-white p-6 mr-16">
                    <p class="text-xl font-medium mb-4 md:text-2xl">
                        {{ page.meta(prefix ~ 'knowledge_title') }}
                    </p>
                    <p class="text-base md:text-xl">
                        {{ page.meta(prefix ~ 'knowledge_description') }}
                    </p>
                </div>
            </div>

            <div class="expander-wrapper w-full">
                <div class="expander-trigger bg-red relative h-16 px-6 md:h-32 md:px-8 flex items-center">
                    <h3>money</h3>
                    <div class="expander-icon z-40 absolute w-16 h-16 pin-r pin-t">
                        <div class="plus absolute"><img src="{{ theme.link }}/assets/images/icon-plus.svg" alt=""></div>
                        <div class="cross absolute"><img src="{{ theme.link }}/assets/images/icon-cross.svg" alt=""></div>
                    </div>
                </div>
                <div class="expander-content bg-purple text-white p-6 mr-16">
                    <p class="text-xl font-medium mb-4 md:text-2xl">
                        {{ page.meta(prefix ~ 'money_title') }}
                    </p>
                    <p class="text-base md:text-xl">
                        {{ page.meta(prefix ~ 'money_description') }}
                    </p>
                </div>
            </div>

            <div class="expander-wrapper w-full">
                <div class="expander-trigger bg-white text-red relative h-16 px-6 md:h-32 md:px-8 flex items-center">
                    <h3>network</h3>
                    <div class="expander-icon z-40 absolute w-16 h-16 pin-r pin-t">
                        <div class="plus absolute"><img src="{{ theme.link }}/assets/images/icon-plus.svg" alt=""></div>
                        <div class="cross absolute"><img src="{{ theme.link }}/assets/images/icon-cross.svg" alt=""></div>
                    </div>
                </div>
                <div class="expander-content bg-purple text-white p-6 mr-16">
                    <p class="text-xl font-medium mb-4 md:text-2xl">
                        {{ page.meta(prefix ~ 'network_title') }}
                    </p>
                    <p class="text-base md:text-xl">
                        {{ page.meta(prefix ~ 'network_description') }}
                    </p>
                </div>
            </div>
        </div>

        <div class="scrollify absolute w-16 h-16 pin-b pin-r z-30 cursor-pointer" data-direction="down">
            <img src="{{ theme.link }}/assets/images/double-arrow-down.svg" alt="">
        </div>
    </header>
{% endblock %}
{# #}
