{% extends 'base.twig' %}
{% set prefix = 'contact_' ~ locale|getLang ~ '_' %}
{% block header %}
<header class="section bg-white flex flex-col">
    <div class="w-full pt-24 flex-1 bg-white">
        <div class="h-full relative">
            <div class="m-12 h-auto pin absolute">
                <img class="h-full max-w-full" src="{{ theme.link }}/assets/images/get-in-touch.svg" alt=""></div>
        </div>
    </div>
    <div class="w-full h-1/2 flex-0 flex flex-wrap relative bg-purple">
        <div class="text-red absolute pin z-10 text-center">
            {% include "components/triangle-up-svg.twig" %}
        </div>
        <div class="w-1/2 px-12 py-12 relative z-20">
            <p class="text-3xl">
                {{ page.meta(prefix ~ 'text') }}
            </p>
        </div>
        <div class="w-1/2 px-12 py-12 text-right relative z-20">
            <div class="">
                <p class="text-3xl">
                    <a class="text-white" href="mailto:{{ page.meta(prefix ~ 'mail') }}">{{ page.meta(prefix ~ 'mail') }}</a>
                </p>
            </div>
        </div>
       
    </div>
    {% include "components/social.twig" %}
</header>
{% endblock %}

{% block content %}
{#  #}
{% endblock %}

{% block footer %}
{#  #}
{% endblock %}