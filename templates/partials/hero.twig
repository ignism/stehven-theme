<div class="hero w-full h-full flex flex-col md:justify-between px-6 md:px-8 lg:px-12 py-12 bg-{{ background }}">
    <div class="w-full">
        {% if isComingUp == 1 %}
            <h2 class="mt-8 ">{{ title }}</h2>
        {% else %}
            {% if link %}
                <a class="no-underline" href="{{ link }}">
                    <h3 class="block mt-8 md:hidden">{{ title }}</h3>
                    <h2 class="hidden md:block">{{ title }}</h2>
                </a>
            {% else %}
                <h3 class="block mt-8 md:hidden">{{ title }}</h3>
                <h2 class="hidden md:block">{{ title }}</h2>
            {% endif %}
        {% endif %}
        <p class="text-xl md:text-3xl md:w-2/3 mb-8">
            {{ subtitle }}
        </p>
    </div>

    <div class="w-full">
        {% if isComingUp == 1 %}
            <div class="md:w-2/3 text-base font-light md:text-2xl lg:text-3xl">
                {{ paragraph }}
            </div>
        {% else %}
            <div class="md:w-2/3 text-base font-light md:text-2xl">
                {{ paragraph }}
            </div>
        {% endif %}
    </div>
</div>