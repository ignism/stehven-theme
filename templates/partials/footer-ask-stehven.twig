<footer id="footer" class="section bg-white flex flex-wrap flex-col justify-between">
    <div class="w-full px-6 md:px-8 lg:px-12 py-12 bg-white text-center" style="height: 40vh">
        <img class="h-full max-w-full" src="{{ theme.link }}/assets/images/footer-ask-stehven.svg" alt="" />
    </div>
    <div class="w-full bg-red flex-1 flex flex-wrap relative" style="height: auto">
        <div class="text-purple h-1/2 lg:h-auto absolute pin-b pin-l pin-r lg:pin z-10 text-center">
            {% include "components/triangle-up-svg.twig" %}
        </div>
        <div class="w-1/2 pl-6 md:px-8 lg:px-12 py-12 relative z-20">
            <p class="text-base md:text-3xl">
                {{ text }}
            </p>
        </div>
        <div class="w-1/2 pr-6 md:px-8 lg:px-12 py-12 text-right relative z-20">
            <div class="">
                <p class="text-base md:text-3xl">
                    <a class="text-white" href="mailto:{{mail}}">{{mail}}</a>
                </p>
            </div>
        </div>
        <div class="zenscroll absolute w-16 h-16 pin-b pin-r z-40 cursor-pointer -mb-px" data-direction="up">
            <img src="{{ theme.link }}/assets/images/double-arrow-up.svg" alt="">
        </div>
    </div>
    {% include "components/social.twig" %}
</footer>