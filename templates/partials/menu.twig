{% if menu %}
    <nav id="menu" class="h-12 w-full bg-black fixed z-50 flex items-center justify-between">
        <div>
            <a href="#">ask stehven</a>
        </div>
        <div class="flex">
            <ul class="flex list-reset">
                {% for item in menu %}
                    <li class="{{ item.classes | join(' ') }}">
                        {% if item.title == 'English' %}
                            <a target="{{ item.target }}" href="{{ item.link }}">EN</a>/
                        {% endif %}
                        {% if item.title == 'Nederlands' %}
                            <a target="{{ item.target }}" href="{{ item.link }}">NL</a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            <a href="#">burger</a>
        </div>
    </nav>
{% endif %}